<div class="container">
  <div class="header d-flex my-3">My Dashboard</div>
    <div class="row">
      <div class="col-12">
        <div class="cards">
          <% @bookings.each do |booking| %>
                <div class="card position-relative">
                  <div class="card-img" style="background-image:
                        linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),
                        url(<%= cl_image_path booking.bathroom.photo.key %>)" >
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><%= booking.bathroom.title %></h5>
                    <p class="card-text"><%= booking.bathroom.content %></p>
                    <%= link_to 'Delete',
                                  booking_path(booking),
                                  method: :delete,
                                  class: 'btn btn-dark rounded-1 fas fa-trash-alt',
                                  data: { confirm: 'Do you want to delete this booking?'}
                    %>
                    <div class="d-flex justify-content-between">
                      <%= link_to "More information", bathroom_path(booking.bathroom), class: "button btn btn-gradient rounded-1" %>
                    </div>
                  </div>
                </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
