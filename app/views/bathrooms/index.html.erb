<div class="container">
  <div class="row">
    <div class="header d-flex justify-content-around my-3">
    <strong>Our Bathrooms Selection</strong>
    </div>

  <%# SEARCH FORM  %>
    <div class="col-sm-8 offset-sm-2">

      <%= form_tag bathrooms_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a bathroom"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <%# SEARCH FORM RESULT%>

    <div class="row">
      <div class="col-8">
        <div class="cards">
          <% @bathrooms.each do |bathroom| %>
                <div class="card">
                  <div class="card-img" style="background-image:
                        linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),
                        url(<%= cl_image_path bathroom.photos.first.key %>)" >

                  </div>

                  <div class="card-body">
                    <h5 class="card-title"><%= bathroom.title %></h5>
                    <p class="card-text"><%= bathroom.content %></p>

                    <div class="d-flex justify-content-between">
                      <p class="card-text"><strong><%= bathroom.price %> â‚¬ </strong></p>
                      <%= link_to "Take a bath", bathroom_path(bathroom), class: "button btn btn-gradient rounded-1" %>
                    </div>
                  </div>
                </div>
          <% end %>
        </div>
      </div>
      <div class="col-4">

        <%# MAP SECTION %>
        <div
          id="map"
          style="width: 100%; height: 85vh; position: sticky; top: 0"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
