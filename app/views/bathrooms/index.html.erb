<div class="container">
<br>
<div class="header d-flex justify-content-around my-3">Our Bathrooms Selection</div>
  <div class="row">
      <div class="cards">
        <% @bathrooms.each do |bathroom| %>
              <div class="card">
                <div class="card-img" style="background-image:
                      linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),
                      url(<%= cl_image_path bathroom.photo.key %>)" >
                </div>

                <div class="card-body">
                  <h5 class="card-title"><%= bathroom.title %></h5>
                  <p class="card-text"><%= bathroom.content %></p>

                  <div class="d-flex justify-content-between">
                    <p class="card-text"><strong><%= bathroom.price %> â‚¬ </strong></p>
                    <%= link_to "Take a Bath", bathroom_path(bathroom), class: "button btn btn-gradient rounded-1" %>
                  </div>
                </div>
              </div>
        <% end %>
      </div>
  </div>
</div>


<div class="footer">
  <div class="footer-links">
    <a href="https://www.instagram.com/bathrooms_of_insta/"><i class="fab fa-instagram"></i></a>
    <a href="https://www.facebook.com/LuxuryBathroomsBlog/"><i class="fab fa-facebook"></i></a>
    <a href="https://twitter.com/bathroomsluxury"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
    <i class="fas fa-at"></i> <a href="mailto:flashbath@flashbath.com">Contact Us</a>
  </div>
</div>

