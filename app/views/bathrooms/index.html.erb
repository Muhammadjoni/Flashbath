<div class="container">
<h1 class="d-flex justify-content-around my-3"> Our Bathrooms Selection</h1>
  <div class="row ">
      <div class="cards">
        <% @bathrooms.each do |bathroom| %>
              <div class="card">
                <div class="card-img" style="background-image:
                      linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),
                      url(<%= cl_image_path bathroom.photo.key %>)" >
                </div>

                <div class="card-body">
                  <h5 class="card-title"><%= bathroom.title %></h5>
                  <p class="card-text"><%= bathroom.content %></p>

                  <div class="d-flex justify-content-between">
                    <p class="card-text"><strong><%= bathroom.price %> â‚¬ </strong></p>
                    <%= link_to "Take a Bath", bathroom_path(bathroom), class: "btn btn-primary rounded-1" %>
                  </div>
                </div>
              </div>
        <% end %>
      </div>
  </div>
</div>
