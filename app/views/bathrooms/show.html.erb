
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-7">
      <%= cl_image_tag @bathroom.photo.key, class: 'w-100 rounded' %>
      <h1 class="mt-3"><%= @bathroom.title %></h1>
      <p>
        <strong>üìç</strong>
        <%= @bathroom.address %>
      </p>
      <p>
        <%= @bathroom.content %>
      </p>
    </div>


    <div class="col-12 col-md-6 col-lg-5">
      <div class="border bottom py-3 px-4 rounded bg-white">
        <h2 class="mb-3"> <del style="opacity: 0.5"> <%= (@bathroom.price + 25) %>‚Ç¨</del> <strong> <%= @bathroom.price %>‚Ç¨</strong><span> / night </span></h2>
        <div class="form-group mb-3">
          <label for="">Arrival</label>
          <input type="text" placeholder="01/01/2020" class="form-control">
        </div>
        <div class="form-group mb-3">
          <label for="">Departure</label>
          <input type="text" placeholder="01/01/2020" class="form-control">
        </div>
        <input type="submit" value="Book now" class="button btn btn-gradient rounded-1">
        </form>
      </div>
      <div class="border top py-3 padding mt-1"
          id="map"
          style="width: 100%; height: 70vh; position: sticky; top: 0"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>

    <div class="col-12 col-md-6 col-lg-4">
            <div class="border py-3 px-4 rounded bg-white">
                <h2 class="mb-3">
                <label>Average rating: </label>
                <strong>
                <%= @average %></strong></h2>

                <div class="form-group mb-3">
                  <label for="">D</label>
                  <input type="text" placeholder="01/01/2020" class="form-control">
                </div>
                <input type="submit" value="Book now" class="button btn btn-gradient rounded-1">
              </form>
            </div>
          </div>
    </div>

<h2>Leave a review</h2>
    <%= simple_form_for ([@bathroom, @review]) do |f| %>
      <div class="form-inputs">
        <%= f.input :comment %>
        <%= f.input :rating, collection: (1..5).to_a %>
      <div class="form-actions">
        <%= f.button :submit, class: 'button btn btn-gradient rounded-1' %>
      </div>
    <% end %>

<h3>The reviews</h3>
  <ul>
    <% @bathroom.reviews.each do |review| %>
      <li>
        <div class="p-2 d-flex justify-content-between align-items-center bg-light">
          <p class="mb-0">
            <%= review.rating %>
            <%= review.comment %>
          </p>
        </div>
      </li>
    <% end %>
  </ul>

  </div>
</div>
