
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-7">
      <%= cl_image_tag @bathroom.photo.key, class: 'w-100 rounded' %>
      <h1 class="mt-3"><%= @bathroom.title %></h1>
      <p>
        <strong>üìç</strong>
        <%= @bathroom.address %>
      </p>
      <p>
        <%= @bathroom.content %>
      </p>
    </div>

    <div class="col-12 col-md-6 col-lg-5">
      <div class="border bottom py-3 px-4 rounded bg-white">
        <h2 class="mb-3"> <del style="opacity: 0.5"> <%= (@bathroom.price + 25) %>‚Ç¨</del> <strong> <%= @bathroom.price %>‚Ç¨</strong><span> / night </span></h2>
        <div class="form-group mb-3">
          <label for="">Arrival</label>
          <input type="text" placeholder="01/01/2020" class="form-control">
        </div>
        <div class="form-group mb-3">
          <label for="">Departure</label>
          <input type="text" placeholder="01/01/2020" class="form-control">
        </div>
        <input type="submit" value="Book now" class="button btn btn-gradient rounded-1">
        </form>
      </div>
      <div class="border top py-3 padding mt-1"
          id="map"
          style="width: 100%; height: 70vh; position: sticky; top: 0"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
  </div>
</div>
